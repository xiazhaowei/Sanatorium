@model Sanatorium.Models.ZhiDuViewModel
@{
    ViewBag.Title = "项目制度信息";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section styles
{
    <!--pickers css-->
    @Styles.Render("~/Scripts/bootstrap-datepicker/css/datepicker-custom.css")
    @Styles.Render("~/Scripts/bootstrap-wysihtml5/bootstrap-wysihtml5.css")
}
<!-- page heading start-->
<div class="page-heading">
    <h3>
        添加项目制度信息
    </h3>
    <ul class="breadcrumb">
        <li>
            <a href="#">主页</a>
        </li>
        <li class="active"> 项目制度信息 </li>
    </ul>
</div>
<!-- page heading end-->
<!--body wrapper start-->
<div class="wrapper">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    项目制度信息
                </header>
                <div class="panel-body">
                    <div class="form">
                        <form class="cmxform form-horizontal adminex-form" id="commentForm" method="post" action="/Admin/Sanatorium/EditZhiDuInfo" novalidate="novalidate">
                            <div class="form-group ">
                                <label for="ShiGongZhidu" class="control-label col-lg-2">施工制度 </label>
                                <div class="col-lg-10">
                                    @Html.HiddenFor(model => model.Id)
                                    <textarea class="editors form-control" style="height:300px;" name="ShiGongZhidu" rows="9">@Model.ShiGongZhidu</textarea>
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="AnQuanZhiDu" class="control-label col-lg-2">安全制度 </label>
                                <div class="col-lg-10">
                                    <textarea class="editors form-control" style="height:300px;" name="AnQuanZhiDu" rows="9">@Model.AnQuanZhiDu</textarea>
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="XiaoFangZhidu" class="control-label col-lg-2">消防制度 </label>
                                <div class="col-lg-10">
                                    <textarea class="editors form-control" style="height:300px;" name="XiaoFangZhidu" rows="9">@Model.XiaoFangZhidu</textarea>
                                </div>
                            </div>
                            
                            

                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-6">
                                    <button class="btn btn-primary" type="submit">下一步</button>
                                    @Html.ActionLink("返回", "Index", "Sanatorium", new { @class = "btn btn-default" })
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </section>
        </div>
    </div>
</div>

@section scripts
{
    <!--pickers plugins-->
    @Scripts.Render("~/Scripts/bootstrap-datepicker/js/bootstrap-datepicker.js")
    <!--pickers initialization-->
    @Scripts.Render("~/Scripts/pickers-init.js")
    @Scripts.Render("~/Scripts/jquery.validate.min.js")
    @Scripts.Render("~/Scripts/validation-init.js")
    @Scripts.Render("~/Scripts/kindeditor/kindeditor-all.js")
    @Scripts.Render("~/Scripts/kindeditor/lang/zh-CN.js")

    <script>
    $(document).ready(function(){
            $(".custom-nav li").each(function(i,n){
                $(n).removeClass("nav-active");
                $(n).removeClass("active");
            });

            $('.nav_householder').addClass("nav-active");
            $(".subnav_addhouseholder").addClass("active");

            KindEditor.ready(function (K) {
                window.editor = K.create('.editors', {
                    uploadJson: '/Pages/upload_json.ashx',
                    fileManagerJson: '/Pages/file_manager_json.ashx',
                    allowFileManager: true
                });
            });
    });
    </script>
}

