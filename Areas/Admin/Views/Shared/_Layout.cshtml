@using Sanatorium.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <meta name="keywords" content="admin, dashboard, bootstrap, template, flat, modern, theme, responsive, fluid, retina, backend, html5, css, css3">
    <meta name="description" content="">
    <meta name="author" content="xiazhaowei">
    <link rel="shortcut icon" href="#" type="image/png">

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title-项目管理系统</title>

    @RenderSection("styles", required: false) 

    <!--common-->
    @Styles.Render("~/Content/style.css")
    @Styles.Render("~/Content/style-responsive.css")

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
    @{
        MyAccountViewModel myAccount = new MyAccountViewModel();
        if (User.Identity.IsAuthenticated)
        {
            myAccount = (MyAccountViewModel)TempData["MyAccount"];
        }
    }
</head>

<body class="sticky-header">

    <section>
        <!-- left side start-->
        <div class="left-side sticky-left-side">

            <!--logo and iconic logo start-->
            <div class="logo">
                <a href="~/Admin/Home"><img src="/images/logo.png" alt=""></a>
            </div>

            <div class="logo-icon text-center">
                <a href="index.html"><img src="images/logo_icon.png" alt=""></a>
            </div>
            <!--logo and iconic logo end-->

            <div class="left-side-inner">

                <!-- visible to small devices only -->
                <div class="visible-xs hidden-sm hidden-md hidden-lg">
                    <div class="media logged-user">
                        <img alt="" src="/images/photos/user-avatar.png" class="media-object">
                        <div class="media-body">
                            <h4><a href="#">@myAccount.Name</a></h4>
                            <span>"你好，欢迎使用"</span>
                        </div>
                    </div>

                    <h5 class="left-nav-title">账号信息</h5>
                    <ul class="nav nav-pills nav-stacked custom-nav">
                        <li><a href="/Admin/Account/LockScreen?name=@myAccount.Name"><i class="fa fa-desktop"></i>  锁定屏幕</a></li>
                        <li><a href="/Admin/Manager/Add/@myAccount.Id?type=myaccount"><i class="fa fa-cog"></i>  编辑资料</a></li>
                        <li><a href="/Admin/Account/LogOff"><i class="fa fa-sign-out"></i> 退出</a></li>
                    </ul>
                </div>

                <!--sidebar nav start-->
                @Html.Partial("_SideBar")
                <!--sidebar nav end-->

            </div>
        </div>
        <!-- left side end-->
        <!-- main content start-->
        <div class="main-content">

            <!-- header section start-->
            <div class="header-section">

                <!--toggle button start-->
                <a class="toggle-btn"><i class="fa fa-bars"></i></a>
                <!--toggle button end-->
                <!--search start-->
                <form class="searchform" action="index.html" method="post">
                    <input type="text" class="form-control" name="keyword" placeholder="Search here..." />
                </form>
                <!--search end-->
                <!--notification menu start -->
                <div class="menu-right">
                    <ul class="notification-menu">                       
                        <li>
                            <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                <img src="/images/photos/user-avatar.png" alt="" />
                                    @myAccount.Name
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-usermenu pull-right">
                                <li><a href="/Admin/Account/LockScreen?name=@myAccount.Name"><i class="fa fa-desktop"></i>  锁定屏幕</a></li>
                                <li><a href="/Admin/Manager/Add/@myAccount.Id?type=myaccount"><i class="fa fa-cog"></i>  编辑资料</a></li>
                                <li><a href="/Admin/Account/LogOff"><i class="fa fa-sign-out"></i> 退出</a></li>
                            </ul>
                        </li>

                    </ul>
                </div>
                <!--notification menu end -->

            </div>
            <!-- header section end-->
            
            @RenderBody()
            <!--body wrapper end-->
            <!--footer section start-->
            <footer>
                2017 &copy; chaiqian.com by <a href="#" target="_blank">项目管理系统</a>
            </footer>
            <!--footer section end-->


        </div>
        <!-- main content end-->
    </section>

    <!-- Placed js at the end of the document so the pages load faster -->
    @Scripts.Render("~/Scripts/jquery-1.10.2.min.js")
    @Scripts.Render("~/Scripts/jquery-ui-1.9.2.custom.min.js")
    @Scripts.Render("~/Scripts/jquery-migrate-1.2.1.min.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/Scripts/modernizr.min.js")
    @Scripts.Render("~/Scripts/jquery.nicescroll.js")

    
    <script src="http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.5.2/underscore-min.js"></script>

    @RenderSection("scripts", required: false)


    <!--common scripts for all pages-->
    @Scripts.Render("~/Scripts/scripts.js")

   

    
</body>
</html>


