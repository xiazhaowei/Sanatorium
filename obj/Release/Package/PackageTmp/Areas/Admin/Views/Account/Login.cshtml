@model Sanatorium.Models.LoginViewModel
@{
    ViewBag.Title = "登录";
    Layout = "~/Areas/Admin/Views/Shared/_LoginLayout.cshtml";
}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "lg-form",@class= "form-signin", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-signin-heading text-center">
        <h1 class="sign-title">登录到系统</h1>
        <img src="~/images/login-logo.png" alt="" />
    </div>
    <div class="login-wrap">
        @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", placeholder = "用户名", autofocus = "autofocus" })
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "密码", maxlength = "20" })
        <button class="btn btn-lg btn-login btn-block" type="submit">
            <i class="fa fa-check"></i>
        </button>
        <div class="registration">
            通过管理员指定账号登录            
        </div>
        <label class="checkbox">
            <input type="checkbox" value="remember-me"> 下次自动登录
            <span class="pull-right">
                <a data-toggle="modal" href="#myModal"> 忘记密码?</a>
            </span>
        </label>
    </div>
    <!-- Modal -->
    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">忘记密码 ? 【该功能暂停使用，请联系管理员索取密码】</h4>
                </div>
                <div class="modal-body">
                    <p>输入您的邮箱地址，获取密码.</p>
                    <input type="text" name="email" placeholder="Email" autocomplete="off" class="form-control placeholder-no-fix">
                </div>
                <div class="modal-footer">
                    <button data-dismiss="modal" class="btn btn-default" type="button">取消</button>
                    <button class="btn btn-primary" type="button">提交</button>
                </div>
            </div>
        </div>
    </div>
        <!-- modal -->
}


