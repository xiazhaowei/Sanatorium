@model IEnumerable<Sanatorium.Models.Region>
@using Sanatorium.Lib
@{
    ViewBag.Title = "区域管理";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section styles{
    <!--dynamic table-->
    @Styles.Render("~/Scripts/advanced-datatable/css/demo_page.css")
    @Styles.Render("~/Scripts/advanced-datatable/css/demo_table.css")
    @Styles.Render("~/Scripts/data-tables/DT_bootstrap.css")
}

<!-- page heading start-->
<div class="page-heading">
    <h3>
        区域管理
    </h3>
    <ul class="breadcrumb">
        <li>
            <a href="#">主页</a>
        </li>
        <li class="active"> 区域管理 </li>
    </ul>
</div>
<!-- page heading end-->
<!--body wrapper start-->
<div class="wrapper">
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    区域管理
                    <span class="tools pull-right">
                        <a href="javascript:;" class="fa fa-chevron-down"></a>
                        <a href="javascript:;" class="fa fa-times"></a>
                    </span>
                </header>
                <div class="panel-body">
                    <div class="adv-table">
                        <div class="clearfix">
                            <form>
                                @*<input type="text" name="name" value="@ViewBag.name" placeholder="标题" class="form-control" style="display:inline-block !important;width:160px" />
                                <div class="btn-group">
                                    <button id="editable-sample_new" class="btn btn-success">
                                        查询 <i class="fa fa-search"></i>
                                    </button>
                                </div>*@

                                <div class="btn-group pull-right">
                                    <a href="/Admin/Region/Add/0" class="btn btn-primary">
                                        <i class="fa fa-plus"></i> 添加地区
                                    </a>
                                </div>
                            </form>
                        </div>
                        <div class="space15">
                            <hr />
                        </div>
                        <table class="table  table-hover general-table">
                            <thead>
                                <tr>
                                    <th>名称</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeX">
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td class="center">
                                            <div class="btn-group btn-group-sm pull-right">
                                                <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                                    <i class="fa fa-cog"></i> 操作 <i class="fa fa-angle-down"></i>
                                                </button>
                                                <ul class="dropdown-menu text-left">
                                                    <li><a href="/Admin/Region/Add/@item.Id"><i class="fa fa-edit"></i> 编辑</a></li>
                                                    <li class="divider"></li>
                                                    <li><a href="/Admin/Region/Del/@item.Id"><i class="fa fa-trash-o"></i> 删除</a></li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

@section scripts{
    <!--dynamic table-->
    @Scripts.Render("~/Scripts/advanced-datatable/js/jquery.dataTables.js")
    @Scripts.Render("~/Scripts/data-tables/DT_bootstrap.js")
    <!--dynamic table initialization -->
    @Scripts.Render("~/Scripts/dynamic_table_init.js")
    <script>
    $(document).ready(function(){
            $(".custom-nav li").each(function(i,n){
                $(n).removeClass("nav-active");
                $(n).removeClass("active");
            });

            $('.nav_setting').addClass("nav-active");
            $(".subnav_region").addClass("active");
    });
    </script>
}

