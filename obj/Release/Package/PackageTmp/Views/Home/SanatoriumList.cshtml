            $("#city").citySelect({
                url: {
                    "citylist": [

                        {
                            "p": "市北区",
                            "c": [
                                {
                                    "n": "张家港街道",
                                    "a": [
                                        {
                                            "s": "宿迁社区"
                                        },
                                        {
                                            "s": "张庄社区"
                                        },
                                        {
                                            "s": "测试社区"
                                        }
                                    ]
                                },
                                {
                                    "n": "奎山街道",
                                    "a": [
                                        {
                                            "s": "丽阳社区"
                                        }
                                    ]
                                }

                            ]
                        }
                    ]
                },
                prov: "市北区",
                city: "张家港街道",
                dist: "宿迁社区",
                nodata: ""
            });
            //$("prov,.city,.dist").change(function () {
            //    $("#filterform").submit();
            //});
            $("#region,#street,#community").change(function () {
                $("#filterform").submit();
            });
        });
    </script>
}

